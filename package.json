	},
	"repository": {
		"type": "git",
		"url": "https://github.com/thepassle/eslint-plugin-barrel-files"
	},
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^22.13.10",
		"@typescript-eslint/parser": "^6.20.0",
		"@typescript-eslint/rule-tester": "^7.6.0",
		"mocha": "^10.2.0",
		"typescript": "^5.8.2"
	},
	"dependencies": {
		"@devinmdavies/eslint-barrel-file-utils": "^0.0.16",
		"oxc-resolver": "^5.0.1"
